                <Label layoutX="25.0" layoutY="8.0" prefHeight="44.0" prefWidth="215.0" text="Nuevo paciente" textFill="#f2e5f0">
                    <font>
                        <Font name="System Bold" size="22.0" />
                    </font>
                </Label>
                <TextField fx:id="txt_DNI" layoutX="31.0" layoutY="68.0" prefHeight="25.0" prefWidth="149.0" promptText="DNI" />
