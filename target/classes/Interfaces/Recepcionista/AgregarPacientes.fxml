                <TextField fx:id="txt_apellido" layoutX="31.0" layoutY="132.0" promptText="Apellido" />
                <TextField fx:id="txt_telefono" layoutX="31.0" layoutY="163.0" promptText="Telefono" />
                <TextField fx:id="txt_cobertura" layoutX="31.0" layoutY="194.0" promptText="Cobertura" />
